@model List<CoreIntro.Models.Kitap>
@{
    ViewData["Title"] = "Kitap";
}

<h1>Kitap</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Isım</th>
            <th>Yazar</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.KitapIsmi</td>
                <td>@item.Yazar</td>
            </tr>
        }
    </tbody>
   
</table>

<h2>Yeni Gelecek Kitaplar</h2>
@await Component.InvokeAsync("YeniKitaplar")