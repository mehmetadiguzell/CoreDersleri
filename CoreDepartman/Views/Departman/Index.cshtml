@model List<CoreDepartman.Models.Departman>
@{
    ViewData["Title"] = "Departman Listesi";
}

<h1>Departman Listesi</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Departman</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detay</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.DepartmanAd</td>
                <td><a asp-action="DepartmanGetir" asp-controller="Departman" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a></td>
                <td><a href="@Url.Action("DepartmanSil","Departman",new { Id=item.Id})" class="btn btn-danger">Sil</a></td>
                <td><a asp-action="Detay" asp-controller="Departman" asp-route-id="@item.Id" class="btn btn-secondary">Detay</a></td>
            </tr>
        }
    </tbody>
    
</table>
<a href="@Url.Action("YeniDepartman","Departman")" class="btn btn-dark">Departman Ekle</a>
